{
	"name": "inventory",
	"description": "Nextcloud - Inventory",
	"version": "0.0.6",
	"author": {
		"name": "Raimund Schlüßler",
		"email": "raimund.schluessler@mailbox.org"
	},
	"license": "AGPLv3",
	"private": true,
	"homepage": "https://github.com/raimund-schluessler/inventory",
	"scripts": {
		"build": "NODE_ENV=production webpack --progress",
		"dev": "NODE_ENV=development webpack",
		"watch": "NODE_ENV=development webpack --progress --watch",
		"lint": "eslint --ext .js,.vue src tests",
		"lint:fix": "eslint --ext .js,.vue src tests --fix",
		"stylelint": "stylelint 'css/**/*.scss'",
		"stylelint:fix": "stylelint 'css/**/*.scss' --fix",
		"test": "jest --verbose"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:raimund-schluessler/inventory.git"
	},
	"bugs": "https://github.com/raimund-schluessler/inventory/issues",
	"contributors": [],
	"dependencies": {
		"@nextcloud/axios": "1.9.0",
		"@nextcloud/dialogs": "3.1.2",
		"@nextcloud/event-bus": "2.1.1",
		"@nextcloud/files": "2.1.0",
		"@nextcloud/initial-state": "1.2.1",
		"@nextcloud/l10n": "1.4.1",
		"@nextcloud/moment": "1.2.0",
		"@nextcloud/router": "2.0.0",
		"@nextcloud/vue": "github:nextcloud/nextcloud-vue#vue3",
		"@vue/compat": "^3.2.31",
		"bwip-js": "3.0.4",
		"jspdf": "2.5.1",
		"p-queue": "6.6.2",
		"papaparse": "5.3.2",
		"search-query-parser": "1.6.0",
		"uuid": "8.3.2",
		"v-click-outside": "3.1.2",
		"vue": "^3.2.31",
		"vue-click-outside": "1.1.0",
		"vue-material-design-icons": "5.0.0",
		"vue-qrcode-reader": "3.1.0",
		"vue-router": "^4.0.14",
		"vuex": "^4.0.2",
		"vuex-router-sync": "^6.0.0-rc.1"
	},
	"devDependencies": {
		"@nextcloud/babel-config": "1.0.0",
		"@nextcloud/browserslist-config": "2.2.0",
		"@nextcloud/eslint-config": "github:nextcloud/eslint-config#vue3",
		"@nextcloud/stylelint-config": "2.1.2",
		"@nextcloud/webpack-vue-config": "github:nextcloud/webpack-vue-config#vue3",
		"@vue/test-utils": "^2.0.0-rc.17",
		"@vue/vue3-jest": "^27.0.0-alpha.4",
		"babel-core": "7.0.0-bridge.0",
		"babel-jest": "27.5.1",
		"eslint-webpack-plugin": "^3.1.1",
		"jest": "27.5.1",
		"jest-environment-jsdom": "27.5.1",
		"jest-serializer-vue": "2.0.2",
		"regenerator-runtime": "0.13.9"
	},
	"engines": {
		"node": ">=15.0.0",
		"npm": ">=7.17.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"vue"
		],
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/src/$1",
			"^Assets/(.*)$": "<rootDir>/src/assets/$1",
			"^Components/(.*)$": "<rootDir>/src/components/$1",
			"^Directives/(.*)$": "<rootDir>/src/directives/$1",
			"^Fonts/(.*)$": "<rootDir>/src/fonts/$1",
			"^Mixins/(.*)$": "<rootDir>/src/mixins/$1",
			"^Models/(.*)$": "<rootDir>/src/models/$1",
			"^Store/(.*)$": "<rootDir>/src/store/$1",
			"^Utils/(.*)$": "<rootDir>/src/utils/$1"
		},
		"testEnvironment": "jsdom",
		"transform": {
			"^.+\\.js$": "<rootDir>/node_modules/babel-jest",
			".*\\.(vue)$": "<rootDir>/node_modules/@vue/vue3-jest"
		},
		"transformIgnorePatterns": [
			"/node_modules/(?!(.*vue-material-design-icons))"
		],
		"snapshotSerializers": [
			"<rootDir>/node_modules/jest-serializer-vue"
		],
		"setupFilesAfterEnv": [
			"./tests/javascript/unit/setup.js"
		],
		"coverageDirectory": "./coverage/",
		"collectCoverage": true,
		"collectCoverageFrom": [
			"<rootDir>/src/**/*.{js,vue}",
			"!**/node_modules/**"
		],
		"coverageReporters": [
			"json",
			"text",
			"html",
			"lcov",
			"clover"
		]
	},
	"browserslist": [
		"extends @nextcloud/browserslist-config"
	]
}
